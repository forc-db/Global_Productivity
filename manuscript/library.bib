@article{Galbraith2013,
abstract = {Background: The woody biomass residence time ($\tau$w) of an ecosystem is an important variable for accurately simulating its biomass stocks. Methods and results: We reviewed published data from 177 forest plots across the tropics and found a six-fold variation (23-129 years) in $\tau$w across our dataset, with a median $\tau$w of ca. 50 years. This value is similar to the median default value across 21 vegetation models for tropical forests, although the range of values used in models is large (20 to 200 years).Conclusions: The notion of a constant $\tau$w across all tropical forests may be of limited utility, given the large observed variation in $\tau$w. We found that while there was little relationship between climate variables and $\tau$w, there was evidence that edaphic factors exerted a strong influence on $\tau$w. In both the Neotropics and the Paleotropics, $\tau$w was highest in heavily weathered soils, suggesting that low soil fertility and/or non-limiting soil physical conditions exert a critical influence on $\tau$w. There is considerable uncertainty in how $\tau$w will be affected by global environmental change, especially by increased atmospheric CO2. Even small changes in $\tau$w could significantly reduce the future tropical forest carbon sink predicted by many vegetation models. {\textcopyright} 2013 Copyright 2013 Botanical Society of Scotland and Taylor {\&} Francis.},
annote = {This study looks at woody residence times across the tropics, and finds that they show significant variation. Variation doesn't appear to be strongly regulated by climate, but is influenced by altitude. It finds that forests with higher turnover allocate more to woody growth. As the proportion of NPP allocated to stem growth increases, so does woody productivity. This therefore suggests that forests with higher turnover and higher mortality have higher woody productivity. An important unanswered question is whether increased atmospheric carbon dioxide concentrations influence woody residence time.},
author = {Galbraith, David and Malhi, Yadvinder and Affum-Baffoe, Kofi and Castanho, Andrea D.A. and Doughty, Christopher E. and Fisher, Rosie A. and Lewis, Simon L. and Peh, Kelvin S.H. and Phillips, Oliver L. and Quesada, Carlos A. and Sonk{\'{e}}, Bonaventure and Lloyd, Jon},
