issn = {1461023X},
journal = {Ecology Letters},
keywords = {Community ecology,Demographic modelling,Diffusion equation,Disturbance,Equilibrium,Forest dynamics,Herbivory,Kolmogorov,Scaling rules},
number = {11},
pages = {980--989},
title = {{Disturbances prevent stem size-density distributions in natural forests from following scaling relationships}},
volume = {6},
year = {2003}
}
