file = {:C$\backslash$:/Users/becky/Dropbox (Smithsonian)/phd{\_}leeds/references/saatchi et al. 2011a.pdf:pdf},
issn = {00344257},
journal = {Remote Sensing of Environment},
keywords = {BIOMASS,Biomass,Carbon,Costa Rica,DESDynl,Forest structure,La Selva Biological Station,Lidar,Radar,Tropical forests},
number = {11},
pages = {2836--2849},
publisher = {Elsevier Inc.},
title = {{Impact of spatial variability of tropical forest structure on radar estimation of aboveground biomass}},
