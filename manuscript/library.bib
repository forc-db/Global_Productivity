file = {:C$\backslash$:/Users/becky/Dropbox (Smithsonian)/GitHub/Global{\_}Productivity/references/references/FickandHijmans-2017-WorldClim2new1-kmspatialresolutionclimates.pdf:pdf},
issn = {10970088},
journal = {International Journal of Climatology},
keywords = {MODIS,WorldClim,climate surfaces,cloud cover,interpolation,land surface temperature,solar radiation,vapour pressure,wind speed},
number = {12},
pages = {4302--4315},
title = {{WorldClim 2: new 1-km spatial resolution climate surfaces for global land areas}},
volume = {37},
year = {2017}
