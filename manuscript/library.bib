file = {:C$\backslash$:/Users/becky/Dropbox (Smithsonian)/phd{\_}leeds/references/ter steege et al. 2006.pdf:pdf},
issn = {14764687},
journal = {Nature},
number = {7110},
pages = {444--447},
pmid = {17006512},
title = {{Continental-scale patterns of canopy tree composition and function across Amazonia}},
