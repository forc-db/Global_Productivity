issn = {00063207},
journal = {Biological Conservation},
keywords = {Edge effects,Forest regeneration,Habitat fragmentation,Species richness,Trees},
number = {1},
pages = {249--260},
title = {{Drastic erosion in functional attributes of tree assemblages in Atlantic forest fragments of northeastern Brazil}},
