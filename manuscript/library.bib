doi = {10.1002/ecy.2229},
file = {:C$\backslash$:/Users/becky/Dropbox (Smithsonian)/GitHub/Global{\_}Productivity/references/references/Anderson-Teixeira{\_}et{\_}al-2018-Ecology.pdf:pdf},
