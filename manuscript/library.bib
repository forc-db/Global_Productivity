file = {:C$\backslash$:/Users/becky/Dropbox (Smithsonian)/GitHub/Global{\_}Productivity/references/references/Anderson-Teixeira{\_}et{\_}al-2016-Global{\_}Change{\_}Biology.pdf:pdf},
