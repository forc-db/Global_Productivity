journal = {Global Ecology and Biogeography},
keywords = {forests,growing season length,metabolic scaling theory,net primary production,plant age,precipitation,stand biomass,structural equation modelling,temperature},
number = {2},
pages = {166--174},
title = {{Drivers of terrestrial plant production across broad geographical gradients}},
volume = {27},
year = {2018}
}
